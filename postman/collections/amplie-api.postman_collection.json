{
  "info": {
    "name": "AMPLIE API",
    "_postman_id": "replace-with-guid",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health",
      "request": {
        "method": "GET",
        "url": "{{base_url}}/health",
        "header": []
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('status 200', function () { pm.response.to.have.status(200); });",
              "const json = pm.response.json();",
              "pm.test('has version', function () { pm.expect(json).to.have.property('version'); });",
              "pm.test('status ok', function () { pm.expect(json.status).to.eql('ok'); });"
            ]
          }
        }
      ]
    },
    {
      "name": "Protected",
      "request": {
        "method": "GET",
        "url": "{{base_url}}/protected",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "type": "text"
          }
        ]
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('protected returns 200', function () { pm.response.to.have.status(200); });"
            ]
          }
        }
      ]
    }
  ],
  "variable": []
}
